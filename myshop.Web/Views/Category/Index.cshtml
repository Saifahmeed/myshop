@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<table class="table table-hover" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>CreatedTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreatedTime</td>
            </tr>
        }
    </tbody>
