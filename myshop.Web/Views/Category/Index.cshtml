@model IEnumerable<Category>
@{
    ViewBag.Title = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<a class="btn btn-light" href="Category/Create">Add Category</a>
<table class="table table-hover" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>CreatedTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreatedTime</td>
                <td>
                    <a class="btn btn-primary" href="Category/Edit/@category.Id">Edit</a>
                    @* <a class="btn btn-danger" href="Category/Delete/@category.Id">Delete</a> *@
                    <form asp-action="Delete" asp-controller="Category" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@category.Id" />
                        @* <input type="hidden" name="Name" value="@category.Name" /> you can do this if u want to pass the category not only id
                        <input type="hidden" name="Description" value="@category.Description" />
                        <input type="hidden" name="CreatedTime" value="@category.CreatedTime.ToString("o")" /> *@
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

